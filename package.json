{
    "name": "sameko-dev-cpp",
    "version": "1.0.0-beta.9",
    "description": "A fast, modern, and beautiful C++ IDE built with Electron and Monaco Editor",
    "main": "main.js",
    "author": "QuangquyNguyenvo",
    "license": "MIT",
    "homepage": "https://github.com/QuangquyNguyenvo/Sameko-Dev-CPP",
    "repository": {
        "type": "git",
        "url": "https://github.com/QuangquyNguyenvo/Sameko-Dev-CPP.git"
    },
    "bugs": {
        "url": "https://github.com/QuangquyNguyenvo/Sameko-Dev-CPP/issues"
    },
    "keywords": [
        "cpp",
        "c++",
        "c-plus-plus",
        "cpp-ide",
        "c++-ide",
        "ide",
        "code-editor",
        "editor",
        "electron",
        "electron-app",
        "monaco-editor",
        "programming",
        "development",
        "competitive-programming",
        "coding",
        "compiler",
        "gcc",
        "mingw",
        "windows-ide",
        "lightweight-ide",
        "devcpp",
        "dev-cpp",
        "student-ide",
        "beginner-friendly",
        "cpp-compiler",
        "code-runner",
        "syntax-highlighting",
        "intellisense",
        "autocomplete",
        "portable-ide",
        "theme-customization",
        "kawaii",
        "educational-software",
        "programming-tools",
        "cpp-development",
        "cpp11",
        "cpp14",
        "cpp17",
        "cpp20"
    ],
    "scripts": {
        "start": "electron .",
        "dev": "electron . --enable-logging",
        "clean": "powershell -Command \"Remove-Item -Recurse -Force $env:APPDATA/cpp-ide -ErrorAction SilentlyContinue\"",
        "clean-start": "npm run clean && npm start",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux",
        "clean:dist": "powershell -Command \"Remove-Item -Recurse -Force release_build -ErrorAction SilentlyContinue\"",
        "rebuild:win": "npm run clean:dist && npm run build:win"
    },
    "dependencies": {
        "golden-layout": "^2.6.0",
        "monaco-editor": "^0.45.0",
        "tree-sitter": "^0.21.1",
        "tree-sitter-cpp": "^0.23.4",
        "v8-compile-cache": "^2.4.0",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0"
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.quangquy.cppide",
        "productName": "Sameko Dev C++",
        "artifactName": "${productName}-${version}.${ext}",
        "directories": {
            "output": "release_build"
        },
        "files": [
            "main.js",
            "preload.js",
            "src/**/*",
            "node_modules/**/*",
            "mingw64/**/*",
            "!Sameko-GCC/**/*"
        ],
        "extraResources": [
            {
                "from": "Sameko-GCC",
                "to": "Sameko-GCC",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "asar": false,
        "win": {
            "target": [
                "portable",
                "dir"
            ],
            "icon": "src/assets/icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "src/assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "icon": "src/assets/icon.png"
        }
    }
}