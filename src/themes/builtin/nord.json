{
    "$schema": "./theme-schema.json",
    "meta": {
        "id": "nord",
        "name": "Nord",
        "author": "Arctic Ice Studio (Original), Sameko Team (Port)",
        "version": "1.0.0",
        "description": "Arctic-inspired cool blue palette for focused coding",
        "type": "dark",
        "tags": [
            "dark",
            "blue",
            "arctic",
            "calm"
        ]
    },
    "colors": {
        "bgOceanLight": "#3b4252",
        "bgOceanMedium": "#434c5e",
        "bgOceanDeep": "#88c0d0",
        "bgOceanDark": "#2e3440",
        "bgGlass": "rgba(46, 52, 64, 0.95)",
        "bgGlassHeavy": "rgba(36, 41, 51, 0.97)",
        "bgGlassBorder": "rgba(59, 66, 82, 0.9)",
        "accent": "#88c0d0",
        "accentHover": "#81a1c1",
        "textPrimary": "#eceff4",
        "textSecondary": "#8fbcbb",
        "textMuted": "#d8dee9",
        "success": "#a3be8c",
        "error": "#bf616a",
        "warning": "#ebcb8b",
        "border": "#81a1c1",
        "borderStrong": "#88c0d0",
        "shadowSoft": "0 8px 32px rgba(0, 0, 0, 0.4)",
        "shadowCard": "0 4px 12px rgba(0, 0, 0, 0.3)",
        "glow": "0 0 15px rgba(154, 204, 218, 0.3)",
        "bgHeader": "rgba(36, 41, 51, 0.97)",
        "bgPanel": "rgba(46, 52, 64, 0.95)",
        "bgInput": "#2e3440",
        "bgButton": "#3b4252",
        "bgButtonHover": "#434c5e",
        "editorBg": "#2e3440",
        "terminalBg": "#242931",
        "settingsLabelColor": "#eceff4",
        "settingsSectionColor": "#88c0d0"
    },
    "editor": {
        "base": "vs-dark",
        "inherit": true,
        "background": "#2e3440",
        "foreground": "#eceff4",
        "lineHighlight": "#3b4252",
        "selection": "#434c5e",
        "cursor": "#d8dee9",
        "lineNumber": "#4c566a",
        "lineNumberActive": "#d8dee9",
        "scrollbar": "#4c566a50",
        "scrollbarHover": "#4c566a70",
        "scrollbarActive": "#88c0d080",
        "syntax": {
            "comment": {
                "color": "616e88",
                "fontStyle": "italic"
            },
            "keyword": {
                "color": "81a1c1"
            },
            "string": {
                "color": "a3be8c"
            },
            "number": {
                "color": "b48ead"
            },
            "type": {
                "color": "8fbcbb"
            },
            "function": {
                "color": "88c0d0"
            },
            "variable": {
                "color": "eceff4"
            },
            "operator": {
                "color": "81a1c1"
            }
        }
    },
    "terminal": {
        "background": "#242931",
        "foreground": "#eceff4",
        "cursor": "#d8dee9",
        "ansi": {
            "black": "#3b4252",
            "red": "#bf616a",
            "green": "#a3be8c",
            "yellow": "#ebcb8b",
            "blue": "#81a1c1",
            "magenta": "#b48ead",
            "cyan": "#88c0d0",
            "white": "#eceff4"
        }
    }
}