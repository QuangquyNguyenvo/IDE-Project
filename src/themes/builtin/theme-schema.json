{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Sameko IDE Theme",
    "description": "Theme definition for Sameko Dev C++ IDE",
    "type": "object",
    "required": [
        "meta",
        "colors",
        "editor"
    ],
    "properties": {
        "$schema": {
            "type": "string"
        },
        "meta": {
            "type": "object",
            "required": [
                "id",
                "name",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string",
                    "pattern": "^[a-z0-9-]+$"
                },
                "name": {
                    "type": "string"
                },
                "author": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "light",
                        "dark"
                    ]
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "preview": {
                    "type": "string"
                }
            }
        },
        "colors": {
            "type": "object",
            "properties": {
                "bgOceanLight": {
                    "type": "string"
                },
                "bgOceanMedium": {
                    "type": "string"
                },
                "bgOceanDeep": {
                    "type": "string"
                },
                "bgOceanDark": {
                    "type": "string"
                },
                "bgGlass": {
                    "type": "string"
                },
                "bgGlassHeavy": {
                    "type": "string"
                },
                "bgGlassBorder": {
                    "type": "string"
                },
                "accent": {
                    "type": "string"
                },
                "accentHover": {
                    "type": "string"
                },
                "textPrimary": {
                    "type": "string"
                },
                "textSecondary": {
                    "type": "string"
                },
                "textMuted": {
                    "type": "string"
                },
                "success": {
                    "type": "string"
                },
                "error": {
                    "type": "string"
                },
                "warning": {
                    "type": "string"
                },
                "border": {
                    "type": "string"
                },
                "borderStrong": {
                    "type": "string"
                },
                "shadowSoft": {
                    "type": "string"
                },
                "shadowCard": {
                    "type": "string"
                },
                "glow": {
                    "type": "string"
                },
                "bgHeader": {
                    "type": "string"
                },
                "bgPanel": {
                    "type": "string"
                },
                "bgInput": {
                    "type": "string"
                },
                "bgButton": {
                    "type": "string"
                },
                "bgButtonHover": {
                    "type": "string"
                },
                "editorBg": {
                    "type": "string"
                },
                "terminalBg": {
                    "type": "string"
                },
                "settingsLabelColor": {
                    "type": "string"
                },
                "settingsSectionColor": {
                    "type": "string"
                }
            }
        },
        "editor": {
            "type": "object",
            "properties": {
                "base": {
                    "type": "string",
                    "enum": [
                        "vs",
                        "vs-dark",
                        "hc-black"
                    ]
                },
                "inherit": {
                    "type": "boolean"
                },
                "background": {
                    "type": "string"
                },
                "foreground": {
                    "type": "string"
                },
                "lineHighlight": {
                    "type": "string"
                },
                "selection": {
                    "type": "string"
                },
                "cursor": {
                    "type": "string"
                },
                "lineNumber": {
                    "type": "string"
                },
                "lineNumberActive": {
                    "type": "string"
                },
                "scrollbar": {
                    "type": "string"
                },
                "scrollbarHover": {
                    "type": "string"
                },
                "scrollbarActive": {
                    "type": "string"
                },
                "syntax": {
                    "type": "object",
                    "properties": {
                        "comment": {
                            "$ref": "#/definitions/syntaxToken"
                        },
                        "keyword": {
                            "$ref": "#/definitions/syntaxToken"
                        },
                        "string": {
                            "$ref": "#/definitions/syntaxToken"
                        },
                        "number": {
                            "$ref": "#/definitions/syntaxToken"
                        },
                        "type": {
                            "$ref": "#/definitions/syntaxToken"
                        },
                        "function": {
                            "$ref": "#/definitions/syntaxToken"
                        },
                        "variable": {
                            "$ref": "#/definitions/syntaxToken"
                        },
                        "operator": {
                            "$ref": "#/definitions/syntaxToken"
                        }
                    }
                }
            }
        },
        "terminal": {
            "type": "object",
            "properties": {
                "background": {
                    "type": "string"
                },
                "foreground": {
                    "type": "string"
                },
                "cursor": {
                    "type": "string"
                },
                "ansi": {
                    "type": "object",
                    "properties": {
                        "black": {
                            "type": "string"
                        },
                        "red": {
                            "type": "string"
                        },
                        "green": {
                            "type": "string"
                        },
                        "yellow": {
                            "type": "string"
                        },
                        "blue": {
                            "type": "string"
                        },
                        "magenta": {
                            "type": "string"
                        },
                        "cyan": {
                            "type": "string"
                        },
                        "white": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "customCSS": {
            "type": "string"
        }
    },
    "definitions": {
        "syntaxToken": {
            "type": "object",
            "properties": {
                "color": {
                    "type": "string",
                    "pattern": "^[0-9a-fA-F]{6}$"
                },
                "fontStyle": {
                    "type": "string",
                    "enum": [
                        "italic",
                        "bold",
                        "underline",
                        ""
                    ]
                }
            },
            "required": [
                "color"
            ]
        }
    }
}