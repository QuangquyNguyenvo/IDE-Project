{
    "$schema": "./theme-schema.json",
    "meta": {
        "id": "monokai",
        "name": "Monokai",
        "author": "Wimer Hazenberg (Original), Sameko Team (Port)",
        "version": "1.0.0",
        "description": "Iconic theme with vibrant syntax highlighting colors",
        "type": "dark",
        "tags": [
            "dark",
            "vibrant",
            "classic",
            "popular"
        ]
    },
    "colors": {
        "bgOceanLight": "#3e3d32",
        "bgOceanMedium": "#49483e",
        "bgOceanDeep": "#a6e22e",
        "bgOceanDark": "#272822",
        "bgGlass": "rgba(39, 40, 34, 0.95)",
        "bgGlassHeavy": "rgba(30, 31, 28, 0.97)",
        "bgGlassBorder": "rgba(62, 61, 50, 0.9)",
        "accent": "#f92672",
        "accentHover": "#ff4d8f",
        "textPrimary": "#f8f8f2",
        "textSecondary": "#e6db74",
        "textMuted": "#75715e",
        "success": "#a6e22e",
        "error": "#f92672",
        "warning": "#fd971f",
        "border": "#75715e",
        "borderStrong": "#a6e22e",
        "shadowSoft": "0 8px 32px rgba(0, 0, 0, 0.5)",
        "shadowCard": "0 4px 12px rgba(0, 0, 0, 0.4)",
        "glow": "0 0 15px rgba(166, 226, 46, 0.3)",
        "bgHeader": "rgba(30, 31, 28, 0.4)",
        "bgPanel": "rgba(39, 40, 34, 0.95)",
        "bgInput": "#272822",
        "bgButton": "#3e3d32",
        "bgButtonHover": "#49483e",
        "editorBg": "#272822",
        "terminalBg": "#1e1f1c",
        "settingsLabelColor": "#f8f8f2",
        "settingsSectionColor": "#a6e22e"
    },
    "editor": {
        "base": "vs-dark",
        "inherit": true,
        "background": "#272822",
        "foreground": "#f8f8f2",
        "lineHighlight": "#3e3d32",
        "selection": "#49483e",
        "cursor": "#f8f8f0",
        "lineNumber": "#75715e",
        "lineNumberActive": "#f8f8f2",
        "scrollbar": "#75715e50",
        "scrollbarHover": "#75715e70",
        "scrollbarActive": "#a6e22e80",
        "syntax": {
            "comment": {
                "color": "75715e",
                "fontStyle": "italic"
            },
            "keyword": {
                "color": "f92672"
            },
            "string": {
                "color": "e6db74"
            },
            "number": {
                "color": "ae81ff"
            },
            "type": {
                "color": "66d9ef",
                "fontStyle": "italic"
            },
            "function": {
                "color": "a6e22e"
            },
            "variable": {
                "color": "f8f8f2"
            },
            "operator": {
                "color": "f92672"
            }
        }
    },
    "terminal": {
        "background": "#1e1f1c",
        "foreground": "#f8f8f2",
        "cursor": "#f8f8f0",
        "ansi": {
            "black": "#272822",
            "red": "#f92672",
            "green": "#a6e22e",
            "yellow": "#e6db74",
            "blue": "#66d9ef",
            "magenta": "#ae81ff",
            "cyan": "#a1efe4",
            "white": "#f8f8f2"
        }
    }
}