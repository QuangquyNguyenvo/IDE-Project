{
    "$schema": "./theme-schema.json",
    "meta": {
        "id": "dracula",
        "name": "Dracula",
        "author": "Zeno Rocha (Original), Sameko Team (Port)",
        "version": "1.0.0",
        "description": "Classic dark theme with vibrant purple and pink accents",
        "type": "dark",
        "tags": [
            "dark",
            "purple",
            "popular"
        ]
    },
    "colors": {
        "bgOceanLight": "#44475a",
        "bgOceanMedium": "#383a59",
        "bgOceanDeep": "#bd93f9",
        "bgOceanDark": "#21222c",
        "bgGlass": "rgba(40, 42, 54, 0.95)",
        "bgGlassHeavy": "rgba(33, 34, 44, 0.97)",
        "bgGlassBorder": "rgba(68, 71, 90, 0.9)",
        "accent": "#ff79c6",
        "accentHover": "#ff92d0",
        "textPrimary": "#f8f8f2",
        "textSecondary": "#bd93f9",
        "textMuted": "#6272a4",
        "success": "#50fa7b",
        "error": "#ff5555",
        "warning": "#ffb86c",
        "border": "#6272a4",
        "borderStrong": "#bd93f9",
        "shadowSoft": "0 8px 32px rgba(0, 0, 0, 0.5)",
        "shadowCard": "0 4px 12px rgba(0, 0, 0, 0.4)",
        "glow": "0 0 15px rgba(189, 147, 249, 0.4)",
        "bgHeader": "rgba(33, 34, 44, 0.4)",
        "bgPanel": "rgba(40, 42, 54, 0.95)",
        "bgInput": "#282a36",
        "bgButton": "#44475a",
        "bgButtonHover": "#6272a4",
        "editorBg": "#282a36",
        "terminalBg": "#21222c",
        "settingsLabelColor": "#f8f8f2",
        "settingsSectionColor": "#bd93f9"
    },
    "editor": {
        "base": "vs-dark",
        "inherit": true,
        "background": "#282a36",
        "foreground": "#f8f8f2",
        "lineHighlight": "#44475a",
        "selection": "#44475a",
        "cursor": "#f8f8f2",
        "lineNumber": "#6272a4",
        "lineNumberActive": "#f8f8f2",
        "scrollbar": "#6272a450",
        "scrollbarHover": "#6272a470",
        "scrollbarActive": "#bd93f980",
        "syntax": {
            "comment": {
                "color": "6272a4",
                "fontStyle": "italic"
            },
            "keyword": {
                "color": "ff79c6"
            },
            "string": {
                "color": "f1fa8c"
            },
            "number": {
                "color": "bd93f9"
            },
            "type": {
                "color": "8be9fd",
                "fontStyle": "italic"
            },
            "function": {
                "color": "50fa7b"
            },
            "variable": {
                "color": "f8f8f2"
            },
            "operator": {
                "color": "ff79c6"
            }
        }
    },
    "terminal": {
        "background": "#21222c",
        "foreground": "#f8f8f2",
        "cursor": "#f8f8f2",
        "ansi": {
            "black": "#21222c",
            "red": "#ff5555",
            "green": "#50fa7b",
            "yellow": "#f1fa8c",
            "blue": "#bd93f9",
            "magenta": "#ff79c6",
            "cyan": "#8be9fd",
            "white": "#f8f8f2"
        }
    }
}